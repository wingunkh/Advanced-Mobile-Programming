<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/writePostTitleText"
        android:layout_width="365dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/writePostUsername"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/writePostTitleText"
        app:layout_constraintTop_toBottomOf="@+id/writePostTitleText" />

    <TextView
        android:id="@+id/writePostContentText"
        android:layout_width="359dp"
        android:layout_height="505dp"
        android:layout_marginTop="100dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/writePostTitleText"
        app:layout_constraintTop_toBottomOf="@+id/writePostTitleText" />

    <Button
        android:id="@+id/ggami"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="에잉"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writePostContentText" />

</androidx.constraintlayout.widget.ConstraintLayout>