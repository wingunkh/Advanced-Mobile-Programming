<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/imagePostTitleText"
        android:layout_width="365dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/imagePostContentText"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/imagePostTitleText"
        app:layout_constraintTop_toBottomOf="@+id/imagePostTitleText" />

    <TextView
        android:id="@+id/imagePostUserText"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/imagePostContentText"
        app:layout_constraintStart_toStartOf="@+id/imagePostTitleText"
        app:layout_constraintTop_toBottomOf="@+id/imagePostTitleText"
        app:layout_constraintVertical_bias="0.052" />

    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="327dp"
        android:layout_height="279dp"
        app:layout_constraintBottom_toTopOf="@+id/imagePostContentText"
        app:layout_constraintStart_toStartOf="@+id/imagePostUserText"
        app:layout_constraintTop_toBottomOf="@+id/imagePostUserText"
        app:layout_constraintVertical_bias="0.502"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>