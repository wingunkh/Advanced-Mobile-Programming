<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5" >

    <TextView
        android:id="@+id/text_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/signup_View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/signup_View"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/signup_Email"
        android:layout_width="325sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/signup_Nickname"
        app:layout_constraintStart_toStartOf="@+id/signup_Nickname"
        app:layout_constraintTop_toBottomOf="@+id/signup_Nickname" />

    <EditText
        android:id="@+id/signup_Nickname"
        android:layout_width="325sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signup_View" />

    <EditText
        android:id="@+id/signup_Password"
        android:layout_width="325sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/signup_Email"
        app:layout_constraintStart_toStartOf="@+id/signup_Email"
        app:layout_constraintTop_toBottomOf="@+id/signup_Email" />

    <EditText
        android:id="@+id/signup_ConfirmPassword"
        android:layout_width="325sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/signup_Password"
        app:layout_constraintStart_toStartOf="@+id/signup_Password"
        app:layout_constraintTop_toBottomOf="@+id/signup_Password" />

    <TextView
        android:id="@+id/text_Email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/signup_Email"
        app:layout_constraintStart_toStartOf="@+id/signup_Nickname"
        app:layout_constraintTop_toTopOf="@+id/signup_Email" />

    <TextView
        android:id="@+id/text_Nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname"
        app:layout_constraintBottom_toTopOf="@+id/signup_Nickname"
        app:layout_constraintStart_toStartOf="@+id/signup_Nickname"
        app:layout_constraintTop_toTopOf="@+id/signup_Nickname" />

    <TextView
        android:id="@+id/text_Password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintBottom_toTopOf="@+id/signup_Password"
        app:layout_constraintStart_toStartOf="@+id/signup_Password"
        app:layout_constraintTop_toTopOf="@+id/signup_Password" />

    <Button
        android:id="@+id/button_SignUp"
        android:layout_width="325sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Sign-Up"
        app:layout_constraintEnd_toEndOf="@+id/signup_ConfirmPassword"
        app:layout_constraintStart_toStartOf="@+id/signup_ConfirmPassword"
        app:layout_constraintTop_toBottomOf="@+id/signup_ConfirmPassword" />

    <TextView
        android:id="@+id/text_ConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        app:layout_constraintBottom_toTopOf="@+id/signup_ConfirmPassword"
        app:layout_constraintStart_toStartOf="@+id/signup_ConfirmPassword"
        app:layout_constraintTop_toTopOf="@+id/signup_ConfirmPassword" />

    <TextView
        android:id="@+id/textButton_SignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Already have an account? Sign In"
        app:layout_constraintBottom_toBottomOf="@+id/signup_View"
        app:layout_constraintEnd_toEndOf="@+id/button_SignUp"
        app:layout_constraintStart_toStartOf="@+id/button_SignUp" />
</androidx.constraintlayout.widget.ConstraintLayout>